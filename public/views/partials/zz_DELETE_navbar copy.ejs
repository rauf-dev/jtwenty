        <a class="btn btn-primary btn-sm w-100" href="/create-new-album" role="button">Create new album</a>

        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
          <% for( let index = 0; index < allAlbums.length; index++ ) { %>
          <li class="nav-item d-flex align-items-center border-top border-bottom" id="<%= allAlbums[index]._id %>">
            <div class="navlist-albumname">
              <a class="nav-link text-capitalize px-2" aria-current="page" href="/<%= allAlbums[index].albumPath %> "
                ><%= allAlbums[index].albumName %>
              </a>
            </div>
